    </head>
    
    <body>

        <main>

            <%- include("./partials/header.ejs") %>

            <section class="hero-section d-flex justify-content-center align-items-center" id="section_1">
                <div class="container">
                    <div class="row">
                        <form id="converter-form">
                        <div class="col-lg-6 col-12 mx-auto">
                                <div class="currency-convertor">
                                    <h2>Currency Converter</h2>
                                </div>

                                <img class="swipe" src="images/swipe.gif" alt="Animated GIF">

                                <div class="blocks">
                                    <div class="block">
                                        <h2>I pay</h2>
                                        <div class="input-container">
                                            <input type="number" id="amountFrom" placeholder="Amount" min="0" oninput="validity.valid||(value='');">
                                            <select id="from">
                        
                                            </select>
                                        </div>
                                        <p class="price-one">1 Currency = 1 Currency</p>
                                    </div>

                                    <div class="button-st">
                                        <img src="./images/strilky.png" alt="">
                                    </div>
                    
                                    <div class="block">
                                        <h2>I get</h2>
                                        <div class="input-container">
                                            <input type="text" id="result" placeholder="Amount" readonly>
                                            <select id="to">
                                                
                                            </select>
                                        </div>
                                        <p class="price-two">1 Currency = 1 Currency</p>
                                    </div>
                                </div>

                                <div class="buttons">
                                    <div class="button-con">
                                        <button>Convert Currency</button>
                                    </div>
                                    <a href="checkout.html">
                                        <div class="button-buy">
                                            <button type="button">Buy this currency</button>
                                        </div>
                                    </a>
                                </div> 
                            </div>
                        </div>
                    </form>
                    </div>
                </div>

                <div class="video-wrap">
                    <video autoplay="" loop="" muted="" class="custom-video" poster="">
                        <source src="videos/video.mp4" type="video/mp4">

                        Your browser does not support the video tag.
                    </video>
                </div>
            </section>
        </main>

        <!-- JAVASCRIPT FILES -->
        <script src="js/buy-currency.js"></script>
        <script src="js/jquery.min.js"></script>
        <script src="js/bootstrap.bundle.min.js"></script>
        <script src="js/countdown.js"></script>
        <script src="js/init.js"></script>

    </body>
</html>
